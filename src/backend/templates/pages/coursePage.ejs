<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= course.course_name %> - Course Details</title>
    <%- include( '../components/styling' ) %>
    <style>
        body {
            display: flex;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }
        .sidebar {
            background-color: #2c3e50;
            color: white;
            width: 250px;
            padding: 20px;
        }
        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            margin-bottom: 10px;
        }
        .main-content {
            flex-grow: 1;
            background-color: #ecf0f1;
            padding: 20px;
        }
        .course-header {
            background: #34495e;
            color: white;
            padding: 10px 20px;
            margin: -20px -20px 20px -20px;
            border-radius: 4px;
        }
        .course-info {
            background: white;
            padding: 20px;
            border-radius: 4px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .course-info h2 {
            margin-top: 0;
        }
    </style>
    <style>
        #contentArea[contenteditable="true"] {
            background-color: #f3f3f3;
            border: 1px dashed #666;
            padding: 10px;
            min-height: 150px; /* Give some height to the div if it's empty */
        }
        #editContentBtn {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
</head>
<body>
    
    <div class="main-content" id="mainContent">
        <button id="editContentBtn">Edit</button>
        <div id="contentArea" contenteditable="false">
        </div>
    </div>
    
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        var editBtn = document.getElementById('editContentBtn');
        var contentArea = document.getElementById('contentArea');
        editBtn.addEventListener('click', function() {
            var isEditing = contentArea.contentEditable === 'true';
            contentArea.contentEditable = isEditing ? 'false' : 'true';
            editBtn.textContent = isEditing ? 'Edit' : 'Save';
            if (isEditing) {
                var updatedContent = contentArea.innerHTML;
                fetch('/update-content', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        // Add any necessary security tokens here
                    },
                    body: JSON.stringify({ content: updatedContent }),
                })
                .then(response => response.json())
                .then(data => {
                    // Handle the response data here
                    console.log(data.message);
                })
                .catch((error) => {
                    console.error('Error:', error);
                });
            }
        });
    });
    <style>
        .home-btn {
            display: block;
            padding: 10px 15px;
            margin-bottom: 20px; /* Adjust as needed */
            background-color: #3498db; /* Adjust the color as needed */
            color: white;
            text-align: center;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }
        .home-btn:hover {
            background-color: #2980b9; /* Darker shade for hover state */
        }
    </style>
</body>
</html>